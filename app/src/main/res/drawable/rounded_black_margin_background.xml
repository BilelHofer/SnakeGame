<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:left="20dp"
            android:right="20dp"
            android:bottom="0dp"
            android:top="20dp">

        <shape android:shape="rectangle">
            <stroke
                    android:width="3dp"
                    android:color="#000000"/>
            <corners
                    android:radius="20dp"/>

            <gradient
                    android:startColor="#CC000000"
                    android:endColor="#80000000"
                    android:angle="180"
                    android:type="linear" />
            <corners
                    android:radius="20dp"/>
            <padding
                    android:left="20dp"
                    android:top="10dp"
                    android:right="20dp"
                    android:bottom="10dp" >
            </padding>
        </shape>

    </item>
</layer-list>
